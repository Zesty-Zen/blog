div id="comments"
    <% unless comment.archived_comment? %>

        <strong>Commenter:</strong>

        <%= comment.commenter %>
    
        <p>
            <strong>Comment:</strong>
            <%= comment.body %>
        </p>
        <p>
            <%= link_to "Delete Comment", [comment.article, comment], data: {
                                                                    turbo_method: :delete,                                                                 
                                                                    turbo_confirm: "Are you sure?" }  %>
        </p>


    <% end %>